      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link active" href="Home">Home</a>
        </li>
        <li class="nav-item">
           <span class="visually-hidden">  <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Home">Home</a></span>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>
        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Produits</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("Index", "Product")">Liste des produits</a>
                                <a class="dropdown-item" href="@Url.Action("Create", "Product")">Ajouter un produit</a>

                         
                            </div>
                        </li>

            
    
        
       
          </div>
        </li>
      </ul>
      
    </div>




            <form class="d-flex"   method="get" action="@Url.Action("Search", "Product")">
                    <input class="form-control me-sm-2"  name="term" type="search" placeholder="Chercher"
                       aria-label="Search">
                <button class="btn btn-primary" type="submit">Search</button>
            </form>

  </div>
</nav>



       
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Atelier2 .net CHOUKI Chayma - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
